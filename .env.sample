# Sample .env for the project
# Copy this to `.env` at project root and set real values.

# Django secret key
DJANGO_SECRET_KEY=replace_me_with_a_real_secret_key

# DEBUG mode: True/False
DJANGO_DEBUG=True

# Comma-separated hosts allowed (example: localhost,127.0.0.1)
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1

# SQLite file path (optional). If not set, defaults to db.sqlite3 in project root
DATABASE_URL=sqlite:///db.sqlite3

# CORS
CORS_ALLOW_ALL_ORIGINS=True

# Media and static (optional)
MEDIA_ROOT=media
MEDIA_URL=/media/
STATIC_URL=static/
